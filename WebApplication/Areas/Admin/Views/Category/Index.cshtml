@model IEnumerable<WebApplication.Models.CategoryVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right" style="text-align:right;">
            <a asp-action="Create" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Create New Category</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblData" class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th>@Html.DisplayNameFor(model => model.Order)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Order)</td>
                    <td>
                        <div class="row">
                            <div class="col-2">
                                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                                </a>
                            </div>
                            @*<div class="col-2">
                                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                                    <i class="fas fa-info-circle" aria-hidden="true"></i>
                                </a>
                            </div>*@
                            <div class="col-2">
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                                        <i class="fas fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
